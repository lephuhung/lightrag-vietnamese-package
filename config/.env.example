### LightRAG Vietnamese Package Configuration
### Copy this file to .env and modify as needed

###########################
### Server Configuration
###########################
HOST=0.0.0.0
PORT=9621
WEBUI_TITLE='LightRAG Vietnamese'
WEBUI_DESCRIPTION="LightRAG với Local LLM và Vietnamese Embedding"
WORKERS=2
TIMEOUT=300

### Directories
INPUT_DIR=./inputs
WORKING_DIR=./rag_storage

### Logging
LOG_LEVEL=INFO

#####################################
### Query Configuration
#####################################
ENABLE_LLM_CACHE=true
SUMMARY_LANGUAGE=Vietnamese

### Context control
TOP_K=40
CHUNK_TOP_K=20
MAX_ENTITY_TOKENS=6000
MAX_RELATION_TOKENS=8000
MAX_TOTAL_TOKENS=30000

#####################################
### Document Processing
#####################################
ENABLE_LLM_CACHE_FOR_EXTRACT=true
CHUNK_SIZE=1200
CHUNK_OVERLAP_SIZE=100
ENTITY_TYPES='["Ngườii", "Tổ chức", "Địa điểm", "Sự kiện", "Sản phẩm", "Công nghệ", "Khái niệm"]'
MAX_ASYNC=4
MAX_PARALLEL_INSERT=2

########################################
### Reranking
########################################
RERANK_BINDING=null

###########################################################################
### LLM Configuration - Local OpenAI Compatible API
###########################################################################
LLM_BINDING=openai
LLM_MODEL=Qwen3-Coder-30B-A3B-Instruct
LLM_BINDING_HOST=http://10.8.0.8:8000/v1
LLM_BINDING_API_KEY=not-needed
LLM_TIMEOUT=300

### OpenAI Specific Parameters
OPENAI_LLM_MAX_TOKENS=9000

#######################################################################################
### Embedding Configuration
### Vietnamese Embedding Service tự động chạy tại http://localhost:8001
#######################################################################################
EMBEDDING_BINDING=openai
EMBEDDING_MODEL=vietnamese-embedding
EMBEDDING_DIM=768
EMBEDDING_SEND_DIM=false
EMBEDDING_TOKEN_LIMIT=512
EMBEDDING_BINDING_HOST=http://localhost:8001/v1
EMBEDDING_BINDING_API_KEY=not-needed

#######################################################################################
### Authentication (Optional)
#######################################################################################
# LIGHTRAG_API_KEY=your-secure-api-key-here
# AUTH_ACCOUNTS='admin:admin123'
# TOKEN_SECRET=your-secret-key-for-jwt
